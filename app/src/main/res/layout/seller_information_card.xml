<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Name"
        android:id="@+id/sellerName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25sp"
        android:paddingLeft="7dp"
        android:textColor="#212121"
        android:layout_toLeftOf="@+id/sellerYesVotes"
        android:layout_toStartOf="@+id/sellerYesVotes"
        android:ellipsize="end"
        android:lines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seller Location"
        android:id="@+id/sellerLocation"
        android:layout_below="@+id/sellerName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:paddingLeft="7dp"
        android:textColor="#424242"
        android:layout_marginTop="-8dp"/>

    <ImageView
        android:layout_width="170dp"
        android:layout_height="25dp"
        android:id="@+id/sellerPhoneNumber"
        android:layout_below="@+id/sellerLocation"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="\u25B2 test"
        android:id="@+id/sellerYesVotes"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:textColor="#259b24"
        android:gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u25BC test"
        android:id="@+id/sellerNoVotes"
        android:layout_below="@+id/sellerYesVotes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:textColor="#e51c23"
        android:layout_alignLeft="@+id/sellerYesVotes"
        android:layout_alignStart="@+id/sellerYesVotes"
        android:gravity="left"
        android:layout_marginTop="-5dp"/>

</RelativeLayout>